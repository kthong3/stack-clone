<div>
    <% if current_user %>
      <button id="new_answer_comment_button" class="new-comment-button button center">New Comment</button>
      <form action="/answers/<%= answer.id %>/comments/new" method="post" id="new_answer_comment_form">
        <label for="comment_text">Comment:<br></label>
        <textarea id="answer_comment_text" name="comment_text"></textarea><br>
        <input type="hidden" value="<%= answer.id%>" name="answer_id">
        <input type="submit" class="button" value="Submit Comment">
      </form>
    <% end %>
</div>
