<div>
  <h1><%= @question.question_text %></h1>
  <p>Plus votes: <%= @question.positive_vote_count %></p>
  <p>Negative votes: <%= @question.negative_vote_count %></p>
  <p>Total votes: <%= @question.total_vote_count %></p>
<article>
    <% @question.answers.each do |answer| %>
      <form method="post" action='/questions/<%= @question.id %>'>
        <button type="submit" name="submit"></button>
        <%= erb :'questions/_display_answer', locals: {answer: answer} %>
      </form>
    <% end %>
  </article>
</div>
<div>
  <% if current_user %>
  <button id="new_answer_button" class="new-answer-button button center">New Answer</button>
        <form action="/answers/new" method="post" id="new_answer_form">
          <label for="answer_text">Answer:<br></label>
          <textarea id="answer_text" name="answer_text"></textarea><br>
          <input type="hidden" value="<%= @question.id%>" name="question_id">
          <input type="submit" class="button" value="Submit Answer"></input>
        </form>
  <% end %>
</div>

