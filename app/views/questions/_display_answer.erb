<h2><%= answer.answer_text %></h2>
<ul>
  <li>by: <%= answer.poster.username %></li>
  <p>Plus votes: <%= answer.positive_vote_count %></p>
  <p>Negative votes: <%= answer.negative_vote_count %></p>
  <p>Total votes: <%= answer.total_vote_count %></p>
</ul>

<ul class="answer">
  <% answer.comments.each do |comment| %>
    <%= erb :'questions/_display_new_comment', locals: {comment: comment} %>
  <% end %>

</ul>



